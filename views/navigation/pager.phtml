<?php

$total = $this->get('total');
$page = $this->get('page');
$pageSize = $this->get('page_size');
$pages = ceil($total / $pageSize);

if($pages < 2) {
    return;
}

?>
<ul class="page pagination">
    <li class="first"><a href="?page-number=1"><< First</a></li>
    <li class="previous"><a href="?page-number=<?php echo $page-1; ?>">< Previous</a></li>

    <?php for ($p = 1; $p <= $pages; $p++) { ?>

        <li><a href="?page-number=<?php echo $p; ?>"><?php echo $p; ?></a></li>

    <?php } ?>


    <li class="next"><a href="?page-number=<?php echo $page+1; ?>">Next ></a></li>
    <li class="last"><a href="?page-number=<?php echo $pages; ?>">Last >></a></li>
</ul>