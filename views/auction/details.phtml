            $temp['count'] += 1;
            $temp['items'][] = $item_single->name;
        } else {
            $temp['itemz'][] = $item_single->name;
        }
    }
    if ($temp['count']) {
        $allItemsCount += $temp['count'];
        $categoriesOutput[] = $temp;
    }
