<?php
if (!is_null($this->get('winning'))) {
    $winning = $this->get('winning');
    $losing = $this->get('losing');
} else {
    echo "I could not find your bids.";
    return;
}

?>
<?php if ($winning) { ?>
<h4 class="winning-item">Winning</h4>
<table class="bidder-table">
    <thead>
    <tr>
        <th>Amount</th>
        <th>Item</th>
        <th>Date Inserted</th>
    </tr>
    </thead>
    <?php
    forEach ($winning as $bid) {
    ?>
    <tr>
        <td>
            <?php echo '$' . $bid->amount; ?>
        </td>
        <td>
            <?php echo $bid->name; ?>
        </td>
        <td>
            <?php echo date("m/d/Y g:i a", $bid->microtime); ?>
        </td>
    </tr>
    <?php } ?>
</table>
<?php } ?>


<?php if ($losing) { ?>
<h4 class="losing-item">Losing</h4>
<table class="bidder-table">
    <thead>
    <tr>
        <th>Amount</th>
        <th>Item</th>
        <th>Date Inserted</th>
    </tr>
    </thead>
    <?php
    forEach ($losing as $bid) {
        ?>
        <tr>
            <td>
                <?php echo '$' . $bid->amount; ?>
            </td>
            <td>
                <?php echo $bid->name; ?>
            </td>
            <td>
                <?php echo date("m/d/Y g:i a", $bid->microtime); ?>
            </td>
        </tr>
    <?php
    } ?>

</table>

<?php } ?>